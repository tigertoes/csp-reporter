{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Generic public bucket",
  "Resources": {
    "GenericPublicBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "PublicRead",
        "BucketName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "Environment"
              },
              {
                "Ref": "BucketName"
              }
            ]
          ]
        }
      }
    }
  },
  "Parameters": {
    "Environment": {
      "Type": "String"
    },
    "BucketName": {
      "Type": "String"
    }
  }
}
